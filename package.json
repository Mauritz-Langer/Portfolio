    "validate:css": "csslint css/styles.css",
    "validate:js": "jshint js/main.js",
    "deploy": "gh-pages -d ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mauritz-Langer/Portfolio.git"
  },
  "keywords": [
