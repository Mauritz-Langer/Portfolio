    "website",
    "full-stack",
    "developer",
    "ai",
    "responsive",
    "javascript",
    "css",
    "html"
  ],
  "author": "Mauritz Langer <mauritz.langer@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mauritz-Langer/Portfolio/issues"
  },
  "homepage": "https://mauritz-langer.github.io/Portfolio/",
  "devDependencies": {
    "csslint": "^1.0.5",
    "htmlhint": "^1.1.4",
    "jshint": "^2.13.6",
    "gh-pages": "^6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
